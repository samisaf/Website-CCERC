---
const title = "Critical Care Education & Research Consortium (CCERC)"
const subtitle = ""

import { SITE_TITLE } from "../config";
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import * as mission from "../../content/mission.md"
import MapLibre from "./_maplibre.astro";
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE}`} slot="meta" />
    <section class="mb-8">
      <div class="mb-4">
        <h1
          class="font-extrabold text-3xl md:text-4xl tracking-tight pt-4 pb-2 overflow-hidden"
        >
          <span
            class="bg-gradient-to-br from-[#fb923c] via-[#f97316] to-[#ea580c] dark:from-primary-main dark:via-primary-main dark:to-primary-main bg-clip-text text-transparent"
          >
            {title}
          </span>
        </h1>
        <p class="text-xl pb-4">{subtitle}</p>
      </div>
      <Fragment set:html={mission.compiledContent()} />
      <MapLibre />
    </section>
</PageLayout>
